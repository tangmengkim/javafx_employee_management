<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="955.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ems.EmployeeItemController">
   <children>
      <Label prefHeight="46.0" prefWidth="32.0" textAlignment="CENTER" textFill="#575757">
         <font>
            <Font name="Content Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="id" prefHeight="46.0" prefWidth="72.0" text="0001" textAlignment="CENTER" textFill="#575757">
         <font>
            <Font name="Content Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="firstname" prefHeight="46.0" prefWidth="141.0" text="Dara" textAlignment="CENTER" textFill="#575757">
         <font>
            <Font name="Content Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="lastname" prefHeight="46.0" prefWidth="141.0" text="Vichet" textAlignment="CENTER" textFill="#575757">
         <font>
            <Font name="Content Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="gender" prefHeight="46.0" prefWidth="110.0" text="Male" textAlignment="CENTER" textFill="#575757">
         <font>
            <Font name="Content Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="age" prefHeight="46.0" prefWidth="110.0" text="50" textAlignment="CENTER" textFill="#575757">
         <font>
            <Font name="Content Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="address" prefHeight="46.0" prefWidth="215.0" text="PhnomPenh" textAlignment="CENTER" textFill="#575757">
         <font>
            <Font name="Content Bold" size="20.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="113.0">
         <children>
            <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#handleBtnEdit" styleClass="transparent" stylesheets="@css/style.css">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/edit.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleBtnDelete" styleClass="transparent" stylesheets="@css/style.css">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/delete2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</HBox>
